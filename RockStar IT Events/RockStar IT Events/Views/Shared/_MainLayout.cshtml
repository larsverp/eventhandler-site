<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
    <link href="~/css/StyleSheet.css" type="text/css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>

</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-dark sticky-top">
    <a href="#">
        <img src="~/Images/RockstarLogo.svg" class="nav-height mr-auto" />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse mr-xl-5 pr-xl-3" id="navbarNavDropdown">
        <ul class="navbar-nav mr-auto mt-2 mt-sm-0">
            <li>&#8205;</li>
        </ul>
        <ul class="navbar-nav mt-2 mt-lg-0">
            <li class="nav-item">
                <a class="nav-link text-light" href="#">Event overview</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">My Favorite Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-light" href="#">Update Interests</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    My Account
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="#">My Account Settings</a>
                    <a class="dropdown-item" href="#">Log out</a>
                </div>
            </li>
        </ul>
    </div>
</nav>
<div class="container-fluid bg-subwhite">
    <div class="container main-padding">
        @RenderBody()
    </div>
</div>
<footer class="d-flex justify-content-around" style="line-height: 100px">
    <span class="text-white d-inline-block">© Copyright Team EventHandler 2020</span>
</footer>
</body>
</html>