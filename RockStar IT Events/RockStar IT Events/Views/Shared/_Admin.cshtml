@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
<link rel="stylesheet" href="css/Style-Change.css">
<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
    $(document).ready(function(){
        $(".burger").click(function(){
            $(".wrapper").toggleClass("collapse");
        });
    });
</script>
</head>
<body>

<div class="wrapper">
    <div class="sidebar">
        <ul>
            <li>
                <a href="#" class="burger">
                    <span class="icon"><i class="fas fa-bars"></i></span>
                    <span class="title">Minimize</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-book"></i></span>
                    <span class="title">Create event</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-file-video"></i></span>
                    <span class="title">Tickets</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-volleyball-ball"></i></span>
                    <span class="title">Users</span>
                </a>
            </li>
            <li>
                <a href="#" class="active">
                    <span class="icon"><i class="fas fa-blog"></i></span>
                    <span class="title">Mailing list</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-leaf"></i></span>
                    <span class="title">Create Partner</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon"><i class="fas fa-leaf"></i></span>
                    <span class="title">Create Rockstar</span>
                </a>
            </li>
        </ul>
    </div>

    <div class="main_container">
        @RenderBody()
    </div>
</div>
</body>
</html>