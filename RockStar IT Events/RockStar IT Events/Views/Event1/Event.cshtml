@model Rockstar.Models.Event
@{
    Layout = "_layout";
}


<div class="offset-1 col-md-10 wrapper">
<div class="row">
    <div class="col-md-4">
        <div class="side-picture">
            <img src="@Model.thumbnail" alt="thumbnail" />
        </div>
    </div>
    <div class="col-md-8 info-panel">
        <h1>@Model.title</h1>
        <p>@Model.description</p>
        <h3>PHP | Unit testing | Python</h3>
        <div class="row">
            <div class="col-md-5 content-information">
                <div class="row">
                    <div class="col-md-2">
                        <img src="~/img/calendar.png">
                    </div>
                    <div class="col-md-10">
                        <p>@Model.begin_date</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <img src="~/img/clock.png">
                    </div>
                    <div class="col-md-10">
                        <p>@Model.end_date</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <img src="~/img/marker.png">
                    </div>
                    <div class="col-md-10">
                        <p>Oude kerk 2, Alkmaar</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <img src="~/img/speaking person.png">
                    </div>
                    <div class="col-md-10">
                        <p>Richard Baaters</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <img src="~/img/Chair.png">
                    </div>
                    <div class="col-md-10">
                        <p>@Model.seats places left</p><br>
                    </div>
                </div>
            </div>
            <div class="col-md-7 map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2473.594378924125!2d5.290475315985001!3d51.68556730548133!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c6ee8ae3f5a583%3A0x1ef541bb2cfcdb55!2sTeam%20Rockstars%20IT!5e0!3m2!1snl!2snl!4v1585736622136!5m2!1snl!2snl" width="90%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
        <div class="row invite">
            <div class="col-md-1 checkbox">
                <input class="form-check-input" type="checkbox">
            </div>
            <div class="col-md-6 invite-text">
                <h4>Let my contacts know I'm going</h4>
            </div>
            <div class="col-md-5 invite-button">
                <button>
                    <h5>Sign me up</h5>
                </button>
            </div>
        </div>
    </div>
</div>
</div>