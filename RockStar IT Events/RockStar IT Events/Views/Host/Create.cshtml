@model RockStar_IT_Events.ViewModels.HostCreateViewModel
@{
    ViewData["Title"] = "Create Host";
    Layout = "_Admin";
}

<div class="col-md-10 create-container">

    <form asp-controller="Host" asp-action="Create" class="rockstar-form" name="myForm" enctype="multipart/form-data">

        <h1 class="title col-md-12 text-center">
            Create a new Host
        </h1>
        <div class="col-md-10">
            <div class="form-row">
                <div class="col-md-6">
                    <input class="form-control" asp-for="FirstName" placeholder="Firstname" />
                </div>
                <div class="col-md-6">
                    <input class="form-control" asp-for="LastName" placeholder="Lastname" />
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <textarea name="description" asp-for="Description" placeholder="Describe your host here..." cols="4" rows="20"></textarea>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="input-box p-5" id="yourBtn" onclick="getFile()">click to upload a file</div>
                    <div style='height: 0px; width: 0px; overflow: hidden;'>
                        <input type="file" id="upfile" asp-for="Picture" onchange="sub(this)"/>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <input class="rockstar-btn text-center col-md-12 mb-5" type="submit" value="Save Host" />
                </div>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript" src="~/Scripts/file-display.js"></script>