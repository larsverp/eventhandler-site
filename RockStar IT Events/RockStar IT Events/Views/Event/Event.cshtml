@using System.Globalization
@model RockStar_IT_Events.Models.Event

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/StyleSheet.css">
</head>
<body>
    <div class="col-md-12 header-eventpage">
        <img src="~/img/logo-rockstars@2x_2 1.png" alt="logo-rockstars"></img>
    </div>
    <div class="offset-1 col-md-10 wrapper">
        <div class="row">
            <div class="col-md-4">
                <div class="side-picture">
                    <p class="picture-location text-center">Alkmaar</p>
                    @*<p class="picture-date text-center">@Model.date.ToString($"MMMM dd", new CultureInfo("en-GB"))</p>*@
                </div>
            </div>
            <div class="col-md-8 info-panel">
                <h1>@Model.title</h1>
                <p>@Model.description</p>
                <h3>PHP | Unit testing | Python</h3>
                <div class="row">
                    <div class="col-md-5 content-information">
                        <div class="row">
                            <div class="col-md-2">
                                <img src="~/img/calendar.png">
                            </div>
                            <div class="col-md-10">
                                <p>28 March 2020</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                <img src="~/img/clock.png">
                            </div>
                            <div class="col-md-10">
                                <p>20:00-23:45</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                <img src="~/img/marker.png">
                            </div>
                            <div class="col-md-10">
                                <p>Oude kerk 2, Alkmaar</p>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                <img src="~/img/speaking person.png">
                            </div>
                            <div class="col-md-10">
                                <p>Richard Baaters</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <img src="~/img/Chair.png">
                            </div>
                            <div class="col-md-10">
                                <p>23/50 places left</p><br>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2473.594378924125!2d5.290475315985001!3d51.68556730548133!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c6ee8ae3f5a583%3A0x1ef541bb2cfcdb55!2sTeam%20Rockstars%20IT!5e0!3m2!1snl!2snl!4v1585736622136!5m2!1snl!2snl" width="90%" height="300px" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
                <div class="row invite">
                    <div class="col-md-1 checkbox">
                        <input class="form-check-input" type="checkbox">
                    </div>
                    <div class="col-md-6 invite-text">
                        <h4>Let my contacts know I'm going</h4>
                    </div>
                    <div class="col-md-5 invite-button">
                        <button>
                            <h5>Sign me up</h5>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>