@model IEnumerable<Rockstar.Models.Event>
<link href="~/css/StyleSheet - Copy.css" type="text/css" rel="stylesheet" />

<div class="row bg-white">
    <div class="col-lg normal-padding">
        <h1>Update your Interests!</h1>
        <p class="sub-text">A brand new way of discovering your interests</p>
        <a class="d-inline-flex next-button">
            <span class="align-self-center">discover</span>
            <img class="align-self-center" src="~/Images/Next.png" />
        </a>
    </div>
    <div class="col-sm">
        <img src="~/Images/tinder.png" class="img-demo" />
    </div>
</div>

<div class="row mt-5">
    <div class="col-sm normal-padding">
        <h1>Event Overview</h1>
    </div>
</div>

<div class="d-flex flex-row mb-3">
    <div class="p-2 category">all</div>
    <div class="p-2 category">your interests</div>
    <div class="p-2 category">your location</div>
    <div class="p-2 category">your interests & location</div>
</div>

<div class="row">
    @foreach (var e in Model)
    {
        <div class="col-sm-4 pt-5">
            <a asp-action="Event" asp-route-id="@e.id" class="text-decoration-none">
                <div class="card text-dark" style="height: 500px; box-shadow: rgba(0,0,0,.2) 0px 0px 5px">
                    <img class="card-img-top" src="@e.thumbnail" style="height: 250px; width: 100%; margin: 0"/>
                    <hr class="m-0"/>
                    <div class="px-3" style="height: 250px">
                        @if (@e.title.Length >= 50)
                        {
                            <h2 class="mt-3">
                                @e.title.Substring(0, 50) ...
                            </h2>
                        }
                        else
                        {
                            <h2 class="mt-3">
                                @e.title
                            </h2>
                        }
                        <p class="p-0 m-0">Thursday, May 7, 2020</p>
                        <p class="p-0 m-0">8:00 AM - 10:30 AM</p>
                        <p class="p-0 m-0">32 Seats available</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>