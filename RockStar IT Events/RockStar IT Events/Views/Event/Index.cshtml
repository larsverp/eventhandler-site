@model List<RockStar_IT_Events.Models.Event>

    @{
        ViewData["Title"] = "Index";
    }

<!DOCTYPE html>
<html>
<head>
    <title>Rockstar Events</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link rel="icon" href="~/img/logo-rockstars@2x_2 1.png">
</head>
<body>
    <div id="HeaderHomePage">
        <h1>ROCKSTAR EVENTS</h1>
    </div>
    <div class="header" id="myHeader">
        <div id="NavHomePage">
        </div>
        <div class="LogoNavBar">
            <img src="~/img/logo-rockstars@2x_2 1.png" alt="logo-rockstars">
        </div>
    </div>
    <div id="UpcomingEvents" class="content">
        <p>UPCOMING EVENTS</p>
    </div>


    @foreach (var e in Model)
    {
        <div class="EventBlock">
            <div class="LeftImage"> <img src="@e.thumbnail" alt="@e. image"></div>
            <div class="TextRight">
                <ul>
                    <div class="TextColumn">
                        <li><h1>@e.title - Eindhoven</h1></li>
                        <li>
                            <p>
                                @e.description
                            </p>
                        </li>
                        <div class="TextRow">
                            <li><h5>PHP  |  Unit testing  |  Python  |  C# </h5></li>
                            <div class="InfoButton">
                                <h2>
                                    @Html.ActionLink("More info", "Event", "Event", new { e.id })
                                </h2>
                            </div>
                        </div>
                    </div>
                </ul>
            </div>
        </div>
    }
    <script src="~/scroll.js"></script>
</body>
</html>
