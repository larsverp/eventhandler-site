@model RockStar_IT_Events.ViewModels.EventModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Get Event</title>
</head>
<body>
    <div class="col-md-10 create-container">
        <h1 class="title text-center">EditEvent</h1>
        <h4 class="text-center">EventModel</h4>
        <form asp-controller="Admin" asp-action="EditEvent" class="rockstar-form">

                <div class="form-row">
                    <div class="col-md-12">
                        <input asp-for="Title" class="form-control " id="defaultFormCardNameEx" placeholder="Title" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <input asp-for="Description" class="form-control " rows="4" id="defaultFormCardNameEx" placeholder="Description" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <select asp-for="SpeakerId" id="SpeakerId" asp-items="@(new SelectList(Model.Speakers, "id", "first_name"))">
                            <option value="" selected disabled>Select host</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-6">
                        <input asp-for="StartDate" class="form-control " id="defaultFormCardNameEx" placeholder="Start date" />
                    </div>
                    <div class="col-md-3">
                        <input asp-for="EndDate" class="form-control " id="defaultFormCardNameEx" placeholder="End time" />
                    </div>
                    <div class="col-md-3">
                        <input asp-for="TotalSeats" class="form-control " id="defaultFormCardNameEx" placeholder="Available seats" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-9">
                        <input asp-for="PostalCode" class="form-control " id="defaultFormCardNameEx" placeholder="Location" />
                    </div>
                    <div class="col-md-3">
                        <input asp-for="HouseNumber" class="form-control" placeholder="House number" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <div class="input-box" id="yourBtn" onclick="getFile()">click to upload a file</div>
                        <div style='height: 0px; width: 0px; overflow: hidden;'><input id="upfile" type="file" value="upload" onchange="sub(this)" /></div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-12">
                        <input type="submit" value="Create this event" class="col-md-12 rockstar-btn create-btn text-center" />
                    </div>
                </div>

                <a asp-action="Index">Back to List</a>
        </form>
    </div>

</body>
